<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_watch_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_wvi"
        android:layout_width="40dp"
        android:layout_height="40dp" />


    <TextView
        android:id="@+id/tv_video_title_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@id/tv_video_time_wvi"
        android:layout_toEndOf="@id/iv_wvi"
        android:textColor="@color/blue_violet"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_video_time_wvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/iv_delete_wvi"
        android:textColor="@color/violet"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_delete_wvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_delete_30" />
</RelativeLayout>