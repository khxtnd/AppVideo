<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_vi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:importantForAccessibility="no" />


    <TextView
        android:layout_toEndOf="@id/iv_vi"
        android:layout_toStartOf="@id/tv_video_time_vi"
        android:textColor="@color/blue_violet"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/tv_video_title_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_video_time_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/violet"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp" />
</RelativeLayout>