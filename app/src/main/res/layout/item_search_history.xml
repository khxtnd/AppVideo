<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_history"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_history_shi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_history_25" />

    <TextView
        android:id="@+id/tv_key_search_shi"
        app:layout_constraintStart_toEndOf="@id/iv_history_shi"
        app:layout_constraintEnd_toStartOf="@id/iv_delete_shi"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_height="match_parent"
        android:textColor="@color/violet"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/iv_delete_shi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete_30" />
</androidx.constraintlayout.widget.ConstraintLayout>